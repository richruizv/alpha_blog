<h1>Categories:</h1>
<%= will_paginate @categories %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Articles</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= pluralize category.articles.count, "article" %></td>
      </tr>
    <% end %>
  </tbody>
</table>