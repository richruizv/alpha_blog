<h1> <%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size:200 %>
<br>
<% if logged_in? && (@user == current_user || current_user.admin? ) %>
  <%= link_to 'Edit your profile', edit_user_path(@user) %>
<% end %>

<h3>Articles </h3>
<%= will_paginate @articles %>
<%= render 'articles/article' %>